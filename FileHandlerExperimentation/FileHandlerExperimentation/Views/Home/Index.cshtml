@{
	ViewBag.Title = "Single File Upload";
}

<h2>@ViewBag.Title</h2>
<div class="row">
	Go <a href="@Url.Action("MultiUpload")">here</a> to upload multiple files.
</div>
<form class="form-horizontal" action="@Url.Action("Upload")" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<div class="col-sm-2">
			<label for="file">File</label>
		</div>
		<div class="col-sm-10">
			<input type="file" name="file" id="file"/>
		</div>
	</div>

	<input id="submit-button" type="submit" />
</form>
